@inject IGamesService GamesServices;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Games_Zone| @ViewData["Title"] </title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&display=swap">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    @* <link rel="stylesheet" href="~/Games_Zone.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body class="d-flex flex-column justify-content-between">
    <header>
        <nav class="navbar navbar-expand-lg bg-light " data-bs-theme="light mb-3">
            <div class="container-fluid ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Games_Zone</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Games" asp-action="Index">Games</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Category
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="Games" asp-action="DetailsByCategory" asp-route-categoryId="1">Sports</a>
                                <a class="dropdown-item" asp-controller="Games" asp-action="DetailsByCategory" asp-route-categoryId="2">Action</a>
                                <a class="dropdown-item" asp-controller="Games" asp-action="DetailsByCategory" asp-route-categoryId="3">Adventure</a>
                                <a class="dropdown-item" asp-controller="Games" asp-action="DetailsByCategory" asp-route-categoryId="4">Racing</a>
                                <a class="dropdown-item" asp-controller="Games" asp-action="DetailsByCategory" asp-route-categoryId="5">Fighting</a>
                                <a class="dropdown-item" asp-controller="Games" asp-action="DetailsByCategory" asp-route-categoryId="6">Film</a>
                                <a class="dropdown-item" asp-controller="Games" asp-action="DetailsByCategory" asp-route-categoryId="8">post apocalyptic</a>
                                <a class="dropdown-item" asp-controller="Games" asp-action="DetailsByCategory" asp-route-categoryId="9">Survival</a>
                                <a class="dropdown-item" asp-controller="Games" asp-action="DetailsByCategory" asp-route-categoryId="10">Souls</a>
                                <a class="dropdown-item" asp-controller="Games" asp-action="DetailsByCategory" asp-route-categoryId="11">Horror</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                             <select asp-items="@GamesServices.UniqueGames">
                                 <option>Select a game</option>
                             </select>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#Footer">ContactUs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="Home" asp-route-flag="1">Top rated</a>
                        </li>
                        <li>
                            <form asp-controller="Home" asp-action="Index" id="Form" class="d-flex mt-1 ms-3">
                                <input id="inputText" type="text" name="Name" placeholder="Search.." class="form-control" />
                                <button id="SubmitSearch" class="btn btn-success d-inline" type="submit">Search</button>
                            </form>
                        </li>
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-5">


        <main role="main" class="pb-3 ">

            @RenderBody()
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>@*
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script> *@
    <script>
        
        $(function () {
            $('#SubmitSearch').click(function () {
                $('#Form').submit();
            })
        });

    </script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
