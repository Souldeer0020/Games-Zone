@model Game

@{
    ViewData["Title"] = Model.Name;
}

<div class="card  border-success rounded-3 mt-5 overflow-hidden">
    <div class="card-body  p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                    <div class="d-flex justify-content-between">
                        <div>
                            <h1 class="text-success fw-bolder">@Model.Name</h1>
                            <span class="badge bg-info fs-5 mb-5"> <a class="text-decoration-none d-inline" asp-action="DetailsByCategory" asp-controller="Games" asp-route-categoryId="@Model.CategoryId">@Model.Category?.Name</a> </span>
                        </div>
                        <h4 class="mt-3">@Model.Rate <i class="fa-regular fa-star" style="color:gold"></i> </h4>
                    </div>
                    <p class="fs-5">@Model.Description</p>
                </div>
                
                <div class="row position-relative">
                    <div class="col-md-4">
                        @foreach (var gameDevice in Model.Devices)
                        {
                            <i class="@gameDevice.Device.Icon fs-1 pe-1 text-secondary"></i>
                        }
                    </div>
                    <div class="col-md-3 offset-3" style="position:absolute ;bottom:0px ; right:10px;">
                        <h5>Add to favourites <i class="fa-regular fa-star fs-4 mb-2" style="color:aqua; cursor:cell" @* onclick="navigateToGamesIndex()" *@>
                                <a class="text-decoration-none" asp-controller="Games" asp-action="DetailsByCategory" ></a>
                            </i></h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <a href="@Model.GameWebsite" target="_blank"><img src="@Url.Content($"~/assets/images/games/{Model.Cover}")" alt="@Model.Name" class="w-100 h-100" /></a>@*  @Url.Content converts a relative path (starting with ~/) to an absolute path that the browser can use to request the resource. The ~/ symbol represents the root of the web application. *@
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        function navigateToGamesIndex() {
            window.location.href = '@Url.Action("Index", "Games")';
        }
    </script>
}