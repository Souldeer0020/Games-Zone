@model Game?

@{
    ViewData["Title"] = Model.Name;
}

<form method="post" asp-action="Delete">
    <h1 class="text-success mt-2">Are you sure you want to delete?</h1>
    <div class="card  border-success rounded-3 mt-5 overflow-hidden">
        <div class="card-body  p-0">
            <div class="row">
                <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-around">
                    <div>
                        <h1 class="text-success fw-bolder">@Model.Name</h1>
                        <span class="badge bg-info fs-5 mb-5">@Model.Category?.Name</span>
                        <p class="fs-5">@Model.Description</p>
                    </div>
                    <div>
                        @foreach (var gameDevice in Model.Devices)
                        {
                            <i class="@gameDevice.Device.Icon fs-1 pe-1 text-secondary"></i>
                        }
                    </div>

                </div>
                <div class="col-md-4">
                    <img src="@Url.Content($"~/assets/images/games/{Model.Cover}")" alt="@Model.Name" class="w-100" />@*  @Url.Content converts a relative path (starting with ~/) to an absolute path that the browser can use to request the resource. The ~/ symbol represents the root of the web application. *@
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-info mt-3 ms-2" type="submit" asp-action="Index">Cancel</button>|
    <button class="btn btn-danger mt-3 ms-1" type="submit" asp-action="Delete">Delete</button>
</form>

