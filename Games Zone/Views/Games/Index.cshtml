@model IEnumerable<Game>?

@{
    ViewData["Title"] = "Games";
}


<div class="d-flex justify-content-between mt-2">
    <a class="btn btn-success btn-lg" asp-action="Create">
        <i class="bi bi-plus-circle-dotted"></i>
        Add Game
    </a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-lg">Home</a>
</div>

@if (Model.Any())
{
    <div class="mt-3">
        <table class="table table-bordered border-primary">
            <tbody>
                @foreach (var game in Model)
                {
                    <tr class="border-1 border-success">
                        <td class="d-flex">
                            <div class="pe-4">
                                <img src="@($"assets/images/games/{game.Cover}")" alt="@game.Name" style="max-width :90px"/>
                            </div>
                            <div class="d-flex flex-column justify-content-center">
                                <h4 class="text-info"> <a class="text-decoration-none" asp-action="Details" asp-route-id="@game.Id">@game.Name</a></h4>
                                <h5 class="text-white">@game.Category.Name</h5>
                            </div>
                        </td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-end">
                                <a asp-action ="Edit" asp-route-id="@game.Id" class="btn btn-info rounded rounded-1 me-2">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-danger rounded rounded-1 ">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <div class="alert alert-warning mt-2">
        <h4 class="alert-heading">No Games!</h4>
        <p class="mb-0">There is no games to show <a href="#" class="alert-link"></a>.</p>
    </div>
}

    @section Scripts{
         <script src="~/js/game-delete.js"></script>
    }